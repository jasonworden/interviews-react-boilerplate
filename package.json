{
  "engines": {
    "npm": "please-use-yarn",
    "yarn": ">= 1.19.1"
  },
  "name": "jasonworden/interviews-react-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "classnames": "^2.3.2",
    "dayjs": "^1.11.7",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-scripts": "5.0.1",
    "sass": "^1.58.3",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-config-standard-scss": "^7.0.1",
    "stylelint-prettier": "^3.0.0",
    "use-async-resource": "^2.2.2",
    "use-error-boundary": "^2.0.6",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "lint:es:read": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:es:write": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "lint:style:read": "stylelint \"src/**/*.{css,scss}\"",
    "lint:style:write": "stylelint \"src/**/*.{css,scss}\" --fix",
    "format:misc:read": "prettier \"src/**/*.{json,html,md}\"",
    "format:misc:write": "prettier --write \"**/*.{json,html,md}\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*.{json,html,md}": "prettier --write",
    "*.{css,scss}": "stylelint --fix"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
